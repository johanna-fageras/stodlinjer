{% extends "layouts/base.njk" %}

{% block header %}
  {% include "partials/header.njk" %}
{% endblock %}

{% block content %}
  {% set samlingInfo = (samling | getSamling) or { title: samling, icon: 'fas fas-folder' } %}

  <section class="max-w-6xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <article class="surface-card strong-card post-shell">
      <div class="post-header">
        {% if samling %}
          <i class="post-samling-icon far far-book-open-cover" aria-hidden="true"></i>
        {% endif %}

        <h1 class="post-title">{{ title }}</h1>
        <p class="post-meta">
          <span><i class="far far-calendar"></i> {{ date | formatDate }}</span>
          {% if samling %}
            <span>â€¢ <a href="{{ baseUrl }}/samlingar/{{ samling }}/">{{ samlingInfo.title }}</a></span>
          {% endif %}
        </p>

        {% if description %}
          <p class="post-lead">{{ description }}</p>
        {% endif %}
      </div>

      <div class="post-content">
        {{ content | safe }}
      </div>

      {% if references %}
        <div class="post-references">
          <p class="text-xs uppercase tracking-wide flex items-center gap-2">
            <i class="fas fas-book" aria-hidden="true"></i> Referenser
          </p>
          <ol class="reference-list">
            {% for ref in references %}
              <li>{{ ref }}</li>
            {% endfor %}
          </ol>
        </div>
      {% endif %}
    </article>
  </section>
{% endblock %}
