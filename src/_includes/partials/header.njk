{% set h = header or {} %}
<header class="header-shell">
  <div class="header-inner">
    <div class="header-brand">
      <a class="brand-mark" aria-label="Till startsidan" href="{{ baseUrl }}/">
        <i class="{{ h.icon }}" aria-hidden="true"></i>
      </a>
      <div class="header-text">
        <p
          class="text-xs font-semibold uppercase tracking-wide"
          style="margin: 0; color: var(--accent)"
        >
          {{ h.label }}
        </p>
        <h1>{{ h.title }}</h1>
        <p>{{ h.subtitle }}</p>
      </div>
    </div>
    <div class="header-actions">
      {% if h.links %}
        {% for link in h.links %}
          <a href="{{ baseUrl }}{{ link.url }}" class="header-link" aria-label="{{ link.aria }}">
            <i class="{{ link.icon }}"></i><span>{{ link.text }}</span>
          </a>
        {% endfor %}
      {% endif %}
      <button id="themeToggle" type="button" class="theme-toggle" aria-pressed="true">
        <span id="themeIcon" aria-hidden="true"><i class="fas fas-moon"></i></span>
        <span id="themeLabel">Mörkt läge</span>
      </button>
    </div>
  </div>
</header>
